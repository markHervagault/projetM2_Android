<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_intervention_layout"
    android:background="@drawable/border"
    >

    <!--Image de la map-->
    <ImageView
        android:id="@+id/img_map_intervention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/img_item_intervention"
        android:padding="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        >

        <!--date de l'intervention-->
        <TextView
            android:id="@+id/date_intervention"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="end"
            />

        <!--adresse de l'intervention-->
        <TextView android:id="@+id/adresse_intervention"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            />

        <!--code sinistre de l'intervention-->
        <TextView android:id="@+id/code_sinistre_intervention"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="start"
            />

        <!--statut de l'intervention-->
        <TextView
            android:id="@+id/statut_intervention"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="end"
            />
    </LinearLayout>

</LinearLayout>