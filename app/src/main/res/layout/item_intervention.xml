<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_intervention_layout"
    android:background="@drawable/border"
    >

    <!--code sinistre de l'intervention-->

    <TextView
        android:id="@+id/id_intervention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="12346789"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!--date de l'intervention-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/code_sinistre_intervention"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1100 - AVP lÃ©ger"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date_intervention"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="28/04/18 15:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adresse_intervention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="8 rue de quelque part 35000 RENNES"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/statut_intervention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="En cours" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>